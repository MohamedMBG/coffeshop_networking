<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active State: Primary Color Background with 10% Opacity -->
    <item android:state_checked="true" android:alpha="0.1">
        <shape android:shape="rectangle">
            <!-- Reverted from hardcoded Red to dynamic Primary Color -->
            <solid android:color="#8B5A3C" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Inactive State: Transparent -->
    <item android:drawable="@android:color/transparent" />
</selector>