<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top-Left Corner -->
    <item
        android:left="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#8B5A3C"/>
            <size
                android:width="40dp"
                android:height="40dp"/>
            <corners
                android:topLeftRadius="8dp"/>
        </shape>
    </item>

    <!-- Top-Right Corner -->
    <item
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#8B5A3C"/>
            <size
                android:width="40dp"
                android:height="40dp"/>
            <corners
                android:topRightRadius="8dp"/>
        </shape>
    </item>

    <!-- Bottom-Left Corner -->
    <item
        android:left="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#8B5A3C"/>
            <size
                android:width="40dp"
                android:height="40dp"/>
            <corners
                android:bottomLeftRadius="8dp"/>
        </shape>
    </item>

    <!-- Bottom-Right Corner -->
    <item
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#8B5A3C"/>
            <size
                android:width="40dp"
                android:height="40dp"/>
            <corners
                android:bottomRightRadius="8dp"/>
        </shape>
    </item>
</layer-list>